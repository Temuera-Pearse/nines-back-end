<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <!-- Target .NET 8.0 LTS -->
    <TargetFramework>net8.0</TargetFramework>

    <!-- Enable nullable-reference annotations -->
    <Nullable>enable</Nullable>

    <!-- Bring in the common usings automatically -->
    <ImplicitUsings>enable</ImplicitUsings>
    
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- suppress “missing XML comment” warnings if you want -->

    <RootNamespace>Nines.BackEnd</RootNamespace>
    <AssemblyName>Nines.BackEnd</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core ASP.NET controller support -->
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />

    <!-- If you add EF Core for a SQL-Server DB -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.0" />

    <!-- API swagger/docs UI -->
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.0" />
  </ItemGroup>

</Project>
